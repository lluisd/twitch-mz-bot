<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>TdF - <%= channel %> - Listado bloqueados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
<h3>Bloqueos - <a href="https://twitch.tv/<%= channel %>" target="_blank"><%= channel %></a></h3>
<span></span>
<%- include('partials/menu', { current: 'blocks' }) %>
<table class="table">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Usuario</th>
    </tr>
    </thead>
    <tbody>
    <%  blocks.forEach(function(block, index) { %>
        <tr class="<%= block.isBlocked ? "table-danger" : "table-danger" %>">
            <th scope="row"><%= index+1 %></th>
            <td><%= block.userName %></td></tr>
    <% }); %>
    </tbody>
</table>
<%- include('layout/footer') %>